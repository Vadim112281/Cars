@using Matoc_Cars.Enum
@model Matoc_Cars.Models.SellCar.SellCarModel

@{
    ViewData["Title"] = "Продати свій автомобіль";
}

<link rel="stylesheet" href="css/header.css" asp-append-version="true">
<link rel="stylesheet" href="css/sell_car.css" asp-append-version="true">

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;900&display=swap" rel="stylesheet">

<header>
    <h1 class="logo"><a asp-controller="Home" asp-action="Index">MatokCars</a></h1>
    <nav class="navigation">
        <a asp-controller="Home" asp-action="Index" class="linkk">Головна</a>
        <a asp-controller="AboutUs" asp-action="Index" class="linkk">Про нас</a>
        <a class="linkk" href="">Замовити</a>
        <a class="linkk" href="">В продажі</a>
        <partial name="_LoginPartial"/>
    </nav>
</header>

<section class="sell">
    <form method="post">
        <div class="sell__form">
            <h2 class="sell__title">Виберіть машину, яку хочете продати</h2>
            <select asp-for="NameOfCar"  class="select__car" asp-items="Html.GetEnumSelectList<NameOfCars>()"></select>
            <button class="sell__btn-choose-car">Далі</button>
        </div>        
    </form>

</section>
