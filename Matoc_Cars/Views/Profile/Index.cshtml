@using Microsoft.AspNetCore.Identity
@using Matoc_Cars.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Профіль";
}

<!--Styles-->
<link rel="stylesheet" href="css/header.css" asp-append-version="true">
<link rel="stylesheet" href="css/profile.css" asp-append-version="true">

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;900&display=swap" rel="stylesheet">

<header>
    <h1 class="logo"><a asp-controller="Home" asp-action="Index">MatokCars</a></h1>
    <nav class="navigation">
        <a asp-controller="Home" asp-action="Index" class="linkk">Головна</a>
        <a asp-controller="AboutUs" asp-action="Index" class="linkk">Про нас</a>
        <a class="linkk" href="">Замовити</a>
        <a class="linkk" href="">Продати</a>
        <a class="linkk" href="">В продажі</a>
        <partial name="_LoginPartial"/>
    </nav>
</header>


<section class="profile">
    <form>
        <div class="profile__form">
            <h2 class="profile__title">Профіль</h2>
            <div class="profile__image"></div>
            <div class="profile__emails">
                <p class="profile__email-name">Почта</p>
                <p class="profile__email-email">@User.Identity.Name</p> 
            </div>
            <div class="profile__btns">
                <a asp-controller="OrderedCarsByUser" asp-action="Index" class="btn__ordered-cars">Замовленні машини</a> 
            </div>
            
        </div>        
    </form>
</section>