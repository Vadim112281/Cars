
@model IEnumerable<Matoc_Cars.Models.SellCar.SellCarModel>

@{
    ViewData["Title"] = "Всі автомобілі в продажі";
}

<link rel="stylesheet" href="css/header.css" asp-append-version="true">
<link rel="stylesheet" href="css/car_for_sell.css" asp-append-version="true">

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;900&display=swap" rel="stylesheet">

<header>
    <h1 class="logo"><a asp-controller="Home" asp-action="Index">MatokCars</a></h1>
    <nav class="navigation">
        <a asp-controller="Home" asp-action="Index" class="linkk">Головна</a>
        <a asp-controller="AboutUs" asp-action="Index" class="linkk">Про нас</a>
        <a class="linkk" href="">Замовити</a>
        <a class="linkk" href="">Продати</a>
        <partial name="_LoginPartial"/>
    </nav>
</header>

       <div class="sell__form">
               <h2 class="sell__title">Автомобілі в продажі</h2>
               <div class="container__sell">
                   @foreach (var item in Model)
                   {
                       <form method="post">
                            @if (item.NameOfCar == 0 && item.ModelOfCar == "7")
                           {
                                <div class="card__card">
                                   <div class="card__items-merc">
                                        <style>
                                            .card__items-merc{
                                                background-color: transparent;
                                                border-radius: 15px;
                                                border: 7px solid white;
                                                box-shadow: 1px 1px 4px rgba(14, 14, 14, 0.4);
                                                width: 420px;
                                                height: 400px;
                                                text-align: center;
                                                padding: 20px;
                                                margin-left: 173px;
                                                margin-top: 10px;
                                                background-size: cover;
                                                background-position: center;
                                                
                                                background-image: url("https://kalix.club/uploads/posts/2023-03/thumbs/1677778762_kalix-club-p-zastavka-znak-mersedesa-oboi-20.jpg");
                                            }
                                        </style>                                            
                                       <h2 class="model__car">Mercedes-Benz G-Class</h2>
                                                   
                                       <p class="price__car">Ціна: <span class="dolar">@item.Price $</span></p>
                                       <button class="btn__more" asp-controller="ForSaleDetail" asp-action="Index" asp-route-id="@item.Id">Детальніше</button>
                                   </div>                
                               </div>
                           }
                       </form>
                   }
               </div>
           </div>

