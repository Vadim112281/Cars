@using Matoc_Cars.Models.SellCar
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Matoc_Cars.Enum.ModelOfCar
@using Matoc_Cars.Enum.Years
@using Matoc_Cars.Enum
@model SellCarModel

@{
    ViewData["Title"] = "Продати свій автомобіль";
}

<!--Styles-->
<link rel="stylesheet" href="css/header.css" asp-append-version="true">
<link rel="stylesheet" href="css/sell_car_all_page.css" asp-append-version="true">

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;900&display=swap" rel="stylesheet">


<header>
    <h1 class="logo"><a asp-controller="Home" asp-action="Index">MatokCars</a></h1>
    <nav class="navigation">
        <a asp-controller="Home" asp-action="Index" class="linkk">Головна</a>
        <a asp-controller="AboutUs" asp-action="Index" class="linkk">Про нас</a>
        <a class="linkk" href="">Замовити</a>
        <a class="linkk" href="">Продати</a>
        <a class="linkk" href="">В продажі</a>
        <partial name="_LoginPartial"/>
    </nav>
</header>


<!-- Link Swiper's CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css">

<!-- Swiper -->
<form method="post">
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <h2 class="slide-title">Вкажіть детальніше про автомобіль, який хочете продавати</h2>
                @if (SellCarStatic.NameOfCar == "Mercedes")
                {
                    <style>
                        body{
                            background-image: url("https://hdpic.club/uploads/posts/2021-11/thumbs/1638073959_57-hdpic-club-p-znachok-mersedes-dlya-zastavki-61.jpg");
                        }
                    </style>
                    <div class="model">
                        <label class="model_of_car">Виберіть марку автомобіля</label>
                        <select asp-for="ModelOfCar" class="select_model" asp-items="Html.GetEnumSelectList<Merсedes>()"></select>
                    </div>
                    <div class="year">
                        <label class="year_of_car">Виберіть рік автомобіля</label>
                        <select asp-for="Year" class="select_year" asp-items="Html.GetEnumSelectList<YearsOfCars>()"></select>               
                    </div>
                }                
            </div>
            <div class="swiper-slide">
                <h2 class="slide-title">Вкажіть детальніше про автомобіль, який хочете продавати</h2>
                <div class="engine">
                    <label class="text__engine">Вкажіть двигун</label>
                    <select asp-for="Engine" class="select__engine"  asp-items="Html.GetEnumSelectList<Engine>()"> </select>                
                </div>
                <div class="transmission">
                    <label class="text__transmission">Вкажіть коробку передач</label>
                    <select asp-for="Transmission" class="select__transmission"  asp-items="Html.GetEnumSelectList<Transmission>()"> </select>                
                </div>          
                <div class="color">
                    <label class="text__color">Вкажіть колір</label>
                    <select asp-for="Color" class="select__color"  asp-items="Html.GetEnumSelectList<Color>()"> </select>                
                </div>
                <div class="drive__unit">
                    <label class="text__drive-unit">Вкажіть привід</label>
                    <select asp-for="DriveUnit" class="select__drive-unit"  asp-items="Html.GetEnumSelectList<DriveUnit>()"> </select>                
                </div>            </div>
            
                   <div class="swiper-slide">
                        <div class="sell__form-page-4">
                            <h2 class="sell__title-page-4">Вкажіть детальніше про автомобіль, який хочете продавати</h2>
                            <div class="price">
                                <label class="text__price">Вкажіть ціну <span class="money">$</span></label>
                                <input asp-for="Price" type="text" class="input__price" placeholder="Ціна автомобіля">
                            </div>
                            <div class="kilometrs">
                                <label class="text__kilo">Вкажіть пробіг у км</label>
                                <input asp-for="Mileage" type="text" class="input__kilo" placeholder="Пробіг автомобіля">
                            </div>       
                            <div class="description">
                                <label class="text__description">Про автомобіль</label>
                                <textarea asp-for="Description" type="text" class="input__description" placeholder="Опис автомобіля."></textarea>
                            </div>            
                            <button  class="sell__btn-choose-car">Розмістити автомобіль на продаж</button>
                        </div>                   
                   </div>
        </div>

        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
    </div>
</form>
<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script>
    var swiper = new Swiper(".mySwiper", {
      cssMode: true,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      pagination: {
        el: ".swiper-pagination",
      },
      mousewheel: true,
      keyboard: true,
    });
  </script>